{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "@verite/*": ["./packages/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
